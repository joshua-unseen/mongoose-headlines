<div class="container">
    <div class="jumbotron">
        Hello, it's news
        <a href="scrape" class="btn btn-primary" id="scrape-btn">Scrape Headlines</a href="scrape">
    </div>
    <div class="card">
        <div class="card-body">
            {{#if data}}
            <table class="table table-hover">
                <thead>
                    <th colspan="3">
                        Today's Headlines
                    </th>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr id="{{_id}}" data-obj="{{stringObj}}">
                        <td>
                            {{#if image}}
                            <img src="{{image}}" class="img-thumbnail" alt="article thumb">
                            {{else}}
                            <img src="assets/images/default.jpg" class="img-thumbnail" alt="default thumb">
                            {{/if}}
                        </td>
                        <td>
                            <p>{{section}}</p>
                            <a href="{{link}}">{{headline}}</a>
                            <p>{{{summary}}}</p>
                        </td>
                        <td class="align-middle">
                            <button class="btn btn-primary w-100 mb-2 notes-btn" data-id="{{_id}}">Comments</button>
                            <button class="btn btn-danger w-100 delete-btn" data-id="{{_id}}">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            No new articles
            {{/if}}
        </div>
    </div>
</div>